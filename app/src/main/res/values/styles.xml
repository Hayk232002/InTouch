<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DialogWhenLarge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:actionBarSize">48dp</item>
        <item name="android:color">@color/colorAccent</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorDark">@color/colorDark</item>
        <item name="colorDarkDark">@color/colorDarkDark</item>
        <item name="colorDarkAcc">@color/colorDarkAcc</item>
        <item name="android:actionBarSize">52dp</item>
        <item name="android:color">@color/colorDarkAcc</item>

    </style>
    <style name="AppTheme.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>

